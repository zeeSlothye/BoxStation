<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="BoxStation.mypage.MyPage"
    xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BoxStation.mypage" 
    WidthSpecification="{Static LayoutParamPolicies.MatchParent}" 
    HeightSpecification="{Static LayoutParamPolicies.MatchParent}" >

    <ContentPage.AppBar >
        <AppBar Title="MyPage"/>
    </ContentPage.AppBar>

    <ContentPage.Content>
        <View 
              WidthSpecification="{Static LayoutParamPolicies.MatchParent}" 
              HeightSpecification="{Static LayoutParamPolicies.MatchParent}">
            <View.Layout>
                <LinearLayout LinearAlignment="Center"
                              LinearOrientation="Vertical"/>
            </View.Layout>
            <TextLabel x:Name="userPN"
                Text="Phone Number: "
                           PixelSize="100"/>
            <TextLabel x:Name="userPW"
                Text="Password:  "
                           PixelSize="100"/>
        </View>
        

    </ContentPage.Content>
</ContentPage>